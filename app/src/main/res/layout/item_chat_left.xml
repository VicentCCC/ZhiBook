<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.srtianxia.zhibook.utils.ui.CircleImageView
        android:id="@+id/img_chat_head_left"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_placeholder"
        app:border_width="1dp"
        app:border_color="@color/colorWhite"/>
    <TextView
        android:id="@+id/tv_chat_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_item_chat_left"
        android:layout_toRightOf="@+id/img_chat_head_left"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="78dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="2dp"
        android:minHeight="60dp"
        android:paddingBottom="14dp"
        android:paddingLeft="22dp"
        android:paddingRight="22dp"
        android:paddingTop="16dp"
        android:textColor="#FF000000"
        android:textSize="15sp" />
</RelativeLayout>