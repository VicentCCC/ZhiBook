<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_answer_authorName"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:text="srtianxia"
        style="@style/TextAppearance.AppCompat.Body2"/>
    <TextView
        android:id="@+id/tv_answer_content"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_answer_authorName"
        android:text="感觉这这知乎都没法玩了。推荐的都是什么鬼，好是好，千八的也没太贵，但你确定大学生负担的了？"
        style="@style/TextAppearance.AppCompat.Body1" />
    <com.srtianxia.zhibook.utils.ui.CircleImageView
        android:id="@+id/img_answer_authorHead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>
</RelativeLayout>