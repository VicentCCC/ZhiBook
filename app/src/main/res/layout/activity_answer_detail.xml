<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".view.activity.ActivityAnswerDetail">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include layout="@layout/include_toolbar"/>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">
        <android.support.v7.widget.CardView
            android:id="@+id/card_answer_question_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="2dp"
            app:cardElevation="3dp">
            <TextView
                android:id="@+id/answer_question_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                style="@style/TextAppearance.AppCompat.Title"
                android:lineSpacingMultiplier="1.2"
                android:text="胖子和瘦子剖开之后的对比真的是这样的吗？"/>
        </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_answer"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    xmlns:fresco="http://schemas.android.com/apk/res-auto">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/answer_detail_head"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="18dp"
                        fresco:roundAsCircle="true"/>
                    <TextView
                        android:id="@+id/answer_detail_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="srtianxia"
                        android:layout_alignTop="@+id/answer_detail_head"
                        android:layout_toRightOf="@+id/answer_detail_head"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp"
                        style="@style/TextAppearance.AppCompat.Body2"/>
                    <TextView
                        android:id="@+id/answer_detail_author_sign"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="爱sjq ~"
                        android:layout_below="@+id/answer_detail_author"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_toRightOf="@+id/answer_detail_head"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/colorTextSecond"
                        android:textSize="12sp"/>

                    <ImageView
                        android:id="@+id/answer_detail_praise"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@mipmap/ic_thumb_up_grey600"
                        android:layout_alignTop="@+id/answer_detail_author"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp" />
                    <TextView
                        android:id="@+id/answer_detail_praise_count"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/answer_detail_praise"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="18dp"
                        android:text="5"
                        style="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="10sp"
                        android:gravity="center"
                        android:background="@drawable/drawable_bk_count"
                        android:textColor="@color/colorPrimaryBlue"
                        android:layout_marginTop="3dp"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:src="@drawable/spilt_line"
                    android:scaleType="fitXY"/>
                <TextView
                    android:id="@+id/answer_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="376dp"
                    android:paddingTop="20dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="20dp"
                    android:textSize="16sp"
                    style="@style/TextAppearance.AppCompat.Body1"/>
                <TextView
                    android:id="@+id/answer_detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp"
        app:layout_behavior="com.srtianxia.zhibook.utils.ui.FooterBehavior">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">
            <ImageView
                android:id="@+id/img_bt_answer_flag"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:layout_weight="1.0"
                android:src="@mipmap/ic_flag_grey600" />
            <ImageView
                android:id="@+id/img_bt_answer_favorite"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@mipmap/ic_favorite_outline_grey600"
                android:layout_weight="1.0"/>
            <ImageView
                android:id="@+id/img_bt_answer_collect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@mipmap/ic_bookmark_outline_grey600"
                android:layout_centerHorizontal="true"
                android:layout_weight="1.0"/>
            <ImageView
                android:id="@+id/img_bt_answer_comment"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@mipmap/ic_forum_grey600"
                android:layout_weight="1.0"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.design.widget.CoordinatorLayout>