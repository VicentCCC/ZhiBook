<?xml version="1.0" encoding="utf-8"?>
<com.srtianxia.zhibook.utils.ui.PlayerDisc
    android:id="@+id/disc_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/img_disc_bg"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:src="@drawable/disc"
        android:layout_centerInParent="true" />
    <ImageView
        android:id="@+id/img_disc_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_disc_bg"
        android:layout_alignLeft="@id/img_disc_bg"
        android:layout_alignRight="@id/img_disc_bg"
        android:layout_alignTop="@id/img_disc_bg"
        android:layout_margin="45dp"
        android:scaleType="centerCrop" />
</com.srtianxia.zhibook.utils.ui.PlayerDisc>